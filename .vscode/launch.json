{
    "version": "0.2.0",
    "configurations": [
        // Application Debugging
        {
            "name": "FastAPI Server (Debug)",
            "type": "debugpy",
            "request": "launch",
            "module": "fpl_toolkit.cli",
            "args": ["serve", "--reload"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": false
        },
        {
            "name": "Streamlit App (Debug)",
            "type": "debugpy",
            "request": "launch",
            "module": "fpl_toolkit.cli",
            "args": ["streamlit"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "FPL CLI",
            "type": "debugpy",
            "request": "launch",
            "module": "fpl_toolkit.cli",
            "args": ["--help"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        
        // Testing Debugging
        {
            "name": "Debug All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/", "-v", "-s"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": false
        },
        {
            "name": "Debug Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-v", "-s"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Debug Failed Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["--lf", "-v", "-s"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        
        // General Debugging
        {
            "name": "Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": true
        },
        
        // API Testing
        {
            "name": "Test API Endpoints",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/test_api_endpoints.py", "-v", "-s"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}
