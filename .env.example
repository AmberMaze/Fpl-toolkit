# Database Configuration
# Leave empty to use SQLite fallback (sqlite:///fpl_toolkit.db)
# For PostgreSQL: postgresql://user:password@localhost:5432/fpl_toolkit
DATABASE_URL=

# AI Model Configuration
# Leave empty to use heuristic-only advisor
# For sentence-transformers: all-MiniLM-L6-v2
AI_MODEL=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# FPL API Configuration (if needed for custom endpoints)
FPL_BASE_URL=https://fantasy.premierleague.com/api

# Logging Configuration
LOG_LEVEL=INFO

# Cache Configuration
CACHE_TTL_SECONDS=3600

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Advanced Metrics Configuration
# Enable advanced metrics (xG/xA) in projections and analysis
ENABLE_ADVANCED_METRICS=true

# Path to xG/xA data file (relative to project root)
XGXA_DATA_FILE=data/xgxa_sample.json

# Path to zone weakness data file (relative to project root) 
ZONE_WEAKNESS_DATA_FILE=data/zone_weakness_sample.json

# Enable zone weakness adjustments in projections
ENABLE_ZONE_WEAKNESS=true

# Advanced metrics fallback behavior
# Options: 'sample_data', 'disable', 'basic_estimation'
ADVANCED_METRICS_FALLBACK=sample_data